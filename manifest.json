{
  "manifest_version": 2,

  "name": "mikiz extension Plugin",
  "icons":
  {
    "128": "icon.png"
  },
  "description": "This extension is the first Miki Ziso Plugin",
  "version": "2.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background":
  {
    "scripts": ["bg.js"]
  },
  "permissions": [
    "notifications",
    "https://glz.co.il/"
  ]
}